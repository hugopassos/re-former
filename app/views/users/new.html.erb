<%= form_for @user do |f| %>
<%= render 'shared/error_messages' %>
  <%= f.label :username %>
  <%= f.text_field :username, placeholder: "Your name here" %>
  <br>
  <%= f.label :email %>
  <%= f.email_field :email, placeholder: "Your email here" %>
  <br>
  <%= f.label :password %>
  <%= f.password_field :password %>
  <br>
  <%= f.submit "Submit" %>
<% end %>